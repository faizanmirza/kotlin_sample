<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".activities.UserDetailActivity">

    <ImageView android:id="@+id/imgUser"
               android:layout_marginTop="30dp"
               android:src="@drawable/user_placeholder"
               android:layout_width="200dp" android:layout_height="200dp"
               android:layout_centerHorizontal="true"/>

    <TextView android:id="@+id/txtName"
              android:layout_marginTop="20dp"
              android:layout_below="@+id/imgUser"
              tools:text="First And Last Name"
              android:gravity="center"
              android:layout_height="wrap_content" android:layout_width="match_parent"/>

    <TextView android:id="@+id/txtEmail"
              android:layout_below="@+id/txtName"
              tools:text="Email"
              android:gravity="center"
              android:layout_height="wrap_content" android:layout_width="match_parent"/>

    <EditText
            android:id="@+id/inputFeedback"
            android:layout_below="@id/txtEmail"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:maxLength="50"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:hint="@string/enter_feedback"/>

    <Button android:id="@+id/btnSubmit"
            android:layout_below="@+id/inputFeedback"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:text="@string/submit"/>
</RelativeLayout>